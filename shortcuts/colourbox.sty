% --- Colour Boxes ---
\usepackage{mdframed}
\mdfsetup{
  skipabove=8pt,
  linewidth=1pt,
  innerleftmargin=10pt,
  innerrightmargin=10pt,
}

\definecolor{pastelRed}{RGB}{252, 192, 187}
\definecolor{pastelGreen}{RGB}{212, 239, 206}
\definecolor{pastelBlue}{RGB}{191, 213, 232}

\mdfdefinestyle{default}{}
\mdfdefinestyle{green}{
  linecolor=pastelGreen,
}
\mdfdefinestyle{blue}{
  linecolor=pastelBlue,
}
\mdfdefinestyle{red}{
  linecolor=pastelRed,
}

\newenvironment{colourbox}[1][default]{\begin{mdframed}[style=#1]}{\end{mdframed}}
\renewenvironment{colorbox}[1][default]{\begin{mdframed}[style=#1]}{\end{mdframed}}
