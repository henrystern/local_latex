% --- Colour Boxes ---
\usepackage{mdframed}
\mdfsetup{
  skipabove=8pt,
  linewidth=1pt,
  innerleftmargin=10pt,
  innerrightmargin=10pt,
}

\definecolor{deepGreen}{RGB}{26,111,0}
\definecolor{shallowGreen}{RGB}{235,255,255}
\definecolor{deepBlue}{RGB}{61,124,222}
\definecolor{shallowBlue}{RGB}{235,249,255}

\mdfdefinestyle{default}{}
\mdfdefinestyle{green}{
  backgroundcolor=shallowGreen,
  linecolor=deepGreen,
}
\mdfdefinestyle{blue}{
  backgroundcolor=shallowBlue,
  linecolor=deepBlue,
}

\newenvironment{colourbox}[1][default]{\begin{mdframed}[style=#1]}{\end{mdframed}}
\renewenvironment{colorbox}[1][default]{\begin{mdframed}[style=#1]}{\end{mdframed}}
